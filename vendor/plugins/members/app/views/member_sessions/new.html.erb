<%- content_for :additional_javascripts do -%>
  <script type="text/javascript" charset="utf-8">
    $(document).ready(function(){
      $("#msession").validationEngine();   
    });
  </script>
<%- end -%>
<h1>Login</h1>
<%= error_messages_for :member_session %>
<% form_for :member_session, :url => member_session_path, :html => {:class => "base", :id => "msession"} do |f| -%>
  <ul>
    <li>
      <%= f.label :email %>
      <%= f.text_field :email, :class => "validate[required]" %>
    </li>
    <li>
      <%= f.label :password %>
      <%= f.password_field :password, :class => "validate[required]" %>
    </li>
    <li>
      <%= f.label :remember_me, nil %>
      <%= f.check_box :remember_me %>
    </li>
    <li>
      <label>&nbsp;</label>
      <%= link_to "I forgot password", new_password_reset_path %>
    </li>
    <li class="buttons">
      <%= submit_tag 'Log in' %>
      &nbsp;No account yet? <%= link_to "Sign-up Now!", "/members/new" %> It's FREE!
    </li>
  </ul>
<% end -%>
