<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(member) -%>">
  <span class='title'>
    <span class='actions'>
      <%= link_to refinery_icon_tag("application_go.png"), member_url(member),
          :title => 'View this member<br/><em>Opens in a new window</em>',
          :target => "_blank" %>
      <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_member_path(member),
           :title => 'Edit this member' %>
      <%= link_to refinery_icon_tag("delete.png"), admin_member_path(member),
          :class => "cancel confirm-delete",
          :title => 'Remove this member forever' %>
    </span>
    <%=h member.email %> <span class="preview">&nbsp;</span>
  </span>
</li>
