<%= error_messages_for :member -%>
<% form_for [:admin, @member] do |f| -%>
  
  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email -%>
  </div>
  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.select(:title, Member.salutation.map{|salutation| [salutation, salutation]}) %>
  </div>
  
  <div class='field'>
    <%= f.label :first_name -%>
    <%= f.text_field :first_name -%>
  </div>
  
  <div class='field'>
    <%= f.label :last_name -%>
    <%= f.text_field :last_name -%>
  </div>
  
  <div class='field'>
    <%= f.label :address -%>
    <%= f.text_area :address, :rows => 5, :cols => 50  -%>
  </div>
  
  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city -%>
  </div>
  
  <div class='field'>
    <%= f.label :post_code -%>
    <%= f.text_field :post_code -%>
  </div>
  
  <div class='field'>
    <%= f.label :territory_state -%>
    <%= f.select(:territory_state, Member.territory_state.map{|territory_state| [territory_state, territory_state]})%>
  </div>
  
  <div class='field'>
    <%= f.label :country -%>
    <%= f.text_field :country -%>
  </div>
  
  <div class='field'>
    <%= f.label :aus_bank_num -%>
    <%= f.text_field :aus_bank_num -%>
  </div>
  
  <div class='field'>
    <%= f.label :bsb_num -%>
    <%= f.text_field :bsb_num -%>
  </div>
  
  <div class='field'>
    <%= f.label :paypal_email -%>
    <%= f.text_field :paypal_email -%>
  </div>
  
  <div class='field'>
    <%= f.label :day_phone -%>
    <%= f.text_field :day_phone -%>
  </div>
  
  <div class='field'>
    <%= f.label :home_phone -%>
    <%= f.text_field :home_phone -%>
  </div>
  
  <div class='field'>
    <%= f.label :mobile_phone -%>
    <%= f.text_field :mobile_phone -%>
  </div>
  
  <div class='field'>
    <%= f.label :referal -%>
    <%= f.select(:referal, Member.referal.map{|referal| [referal, referal]}) %>
  </div>
  
  <div class='field'>
    <%= f.label :agreement -%>
    <%= f.check_box :agreement -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions", :locals => {:f => f, :continue_editing => false} %>
<% end -%>
