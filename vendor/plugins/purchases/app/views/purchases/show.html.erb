<% content_for :body_content_right do %>
  <h2>Other Purchases</h2>
  <ul id="purchases">
    <% @purchases.each do |purchase| %>
      <li>
        <%= link_to purchase.product_id, purchase_url(purchase) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
