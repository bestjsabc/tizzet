<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(product) -%>">
  <span class='title'>
    <span class='actions'>
      <%= link_to refinery_icon_tag("application_go.png"), product_url(product),
          :title => 'View this product<br/><em>Opens in a new window</em>',
          :target => "_blank" %>
      <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_product_path(product),
           :title => 'Edit this product' %>
      <%= link_to refinery_icon_tag("delete.png"), admin_product_path(product),
          :class => "cancel confirm-delete",
          :title => 'Remove this product forever' %>
    </span>
    <%= "#{product.event} - #{product_status[product.status]} - Sold #{product.quantity_sold}/#{product.quantity}" %> <span class="preview">&nbsp;</span>
  </span>
</li>
